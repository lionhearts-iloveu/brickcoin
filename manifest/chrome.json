
{
  "manifest_version": 3,
  "name": "BrickCoin",
  "version": "0.1",
  "description": "Compare Bricklink to Lego Pick a Brick, Save up to 80%",
  "host_permissions": ["https://*.lego.com/*", "https://www.bricklink.com/v2/globalcart*"],
    "permissions": [
      "webRequest",
      "activeTab",
      "tabs",
      "scripting",
      "storage"
    ],
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
  {
    "matches": ["https://www.bricklink.com/v2/globalcart*", "https://*.lego.com/*"],
    "js": ["content.js"],
    "css": ["style.css"]
  }
],
"options_ui": {
  "page": "options.html",
  "open_in_tab": false
},
"icons": {
  "16": "icons/16.png",
  "32": "icons/32.png",
  "48": "icons/48.png",
  "96": "icons/96.png",
  "128": "icons/128.png"
}
}